<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">

    <welcome-file-list>
        <welcome-file>Accueil</welcome-file>
    </welcome-file-list>

    <filter>
        <filter-name>EncodingFilter</filter-name>
        <filter-class>filtres.EncodingFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>EncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>Profil</servlet-name>
        <servlet-class>servlet.Profil</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Profil</servlet-name>
        <url-pattern>/prive/Profil</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ProfilA</servlet-name>
        <servlet-class>servlet.ProfilAdmin</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProfilA</servlet-name>
        <url-pattern>/prive/ProfilAdmin</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>InscriE</servlet-name>
        <servlet-class>servlet.InscriE</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>InscriE</servlet-name>
        <url-pattern>/prive/InscriE</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CommentE</servlet-name>
        <servlet-class>servlet.CommentE</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CommentE</servlet-name>
        <url-pattern>/prive/CommentE</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>Authentification</filter-name>
        <filter-class>filtres.Authentification</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>Authentification</filter-name>
        <url-pattern>/prive/*</url-pattern>
    </filter-mapping>

</web-app>